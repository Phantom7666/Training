#include <iostream>
using namespace std;

void starpt(int n) {
    int i, j, k = n;
    for(i=1; i<=n; i++){
        for(j=1; j<=n; j++){
            if( j >= k)
                cout<<"* ";
            else
                cout<<" ";
        }
        k--;
        cout<<endl;
    }
}

int main(){
    int n;
    cout<<"masukkan jumlah baris: ";
    cin>>n;
    starpt(n);
}
   
